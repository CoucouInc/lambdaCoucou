name:                lambdacoucou
version:             0.1.0.0
synopsis:            Simple project template from stack
description:         Please see README.md
homepage:            https://github.com/githubuser/lambdacoucou#readme
license:             BSD3
license-file:        LICENSE
author:              Author name here
maintainer:          example@example.com
copyright:           2016 Author name here
category:            Web
build-type:          Simple
cabal-version:       >=1.10
extra-source-files:  README.md

library
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options: -Wincomplete-patterns -Wunused-imports -Werror -O2

  exposed-modules:
      LambdaCoucou.Bot
    , LambdaCoucou.Cancer
    , LambdaCoucou.Channel
    , LambdaCoucou.Cli
    , LambdaCoucou.Command
    , LambdaCoucou.Crypto
    , LambdaCoucou.Date
    , LambdaCoucou.Debug
    , LambdaCoucou.HandlerUtils
    , LambdaCoucou.Help
    , LambdaCoucou.Http
    , LambdaCoucou.Parser
    , LambdaCoucou.ParserUtils
    , LambdaCoucou.PR
    , LambdaCoucou.RepublicanCalendar
    , LambdaCoucou.State
    , LambdaCoucou.Url

  build-depends:
      base >= 4.7 && < 5
    , async
    , bytestring
    , containers
    , datetime
    , exceptions
    , generic-lens
    , harg
    , higgledy
    , http-client
    , http-types
    , irc-client
    , irc-ctcp
    , lens
    , lens-aeson
    , megaparsec
    , mtl
    , parser-combinators
    , random
    , req
    , scientific
    , stm
    , tagsoup
    , text
    , time
    , vector

executable lambdacoucou
  hs-source-dirs:      bin
  default-language:    Haskell2010
  main-is:             Main.hs
  ghc-options: -O2 -threaded -rtsopts -with-rtsopts=-N -Wall -Wno-unused-do-bind -Wno-orphans
  build-depends:       base >= 4.7 && < 5
                     , lambdacoucou


test-suite test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Main.hs
  other-modules:       LambdaCoucou.ParserSpec
  build-depends:       base
                     , hspec
                     , hspec-megaparsec
                     , lambdacoucou
                     , megaparsec
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -Wall -Wno-unused-do-bind -Wno-orphans
  default-language:    Haskell2010
